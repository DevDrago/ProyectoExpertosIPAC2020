<%- include('../layout/header') %>

<header>
    <%- include('../layout/head') %>
</header>

<div class="container">
    
    <div class="col-12 text center">

        <div class="row py-5">
            <div class="col-12"><h1> CONTÁCTANOS </h1></div>
        </div>

        <div class="row py-5">
            <div class="col-md-5">
                <div class="card">
                    <div class="row card-body">
                        <div class="col-2 contact-icons"><i class="fas fa-building"></i></div>
                        <div class="col-10"><h6 class="font-weight-bold">Dirección: </h6>Carrera de ingeniería en sistemas. <br>Facultad de ingeniería. CU UNAH. Tegucigalpa, M.D.C., F.M., Honduras. </div>
                    </div>
                    <div class="row card-body">
                        <div class="col-2 contact-icons"><i class="fas fa-globe"></i></div>
                        <div class="col-10 align-middle">
                            <h6 class="font-weight-bold">Web: </h6>
                            <a href="http://localhost:8888/">Localhost</a>
                        </div>
                    </div>
                    <div class="row card-body">
                        <div class="col-2 contact-icons"><i class="fas fa-envelope"></i></div>
                        <div class="col-10 align-middle">
                            <h6 class="font-weight-bold">Correo: </h6>
                            <a href="mailto:admin@localhost.local">admin@localhost.local</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <form>
                    <h3>Escríbenos</h3>
                    <div class="col-12">
                        <div id="contact-msg" class="alert alert-success msg-hidden" role="alert">
                            Mensaje enviado correctamente.
                        </div>
                    </div>
                    <br>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <input type="text" class="form-control" id="fullname" placeholder="Nombre completo" value="">
                            <div class="invalid-feedback">Escriba su nombre.</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <input type="email" class="form-control" id="email" placeholder="Correo electrónico" value="">
                            <div class="invalid-feedback">Escriba un correo válido.</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <input type="text" class="form-control" id="subject" placeholder="Asunto" value="">
                            <div class="invalid-feedback">Escriba un asunto.</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <textarea class="form-control" id="comment" placeholder="Comentarios"></textarea>
                            <div class="invalid-feedback">Por favor escríbanos sus comentarios.</div>
                        </div>
                    </div>
                    <button id="sendContact" class="btn btn-primary" type="submit">Enviar</button>
                </form>
            </div>
        </div>

    </div>

</div>
<!-- Mapa -->
<div class="col-12 mapouter px-0">
    <div class="gmap_canvas">
        <iframe width="100%" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=UNAH&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    </div>
</div>

